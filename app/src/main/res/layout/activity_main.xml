<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="foflelp.coderdojohelper.MainActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/questionButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="ANTWORTE!!!11einself"
        android:contentDescription="Antwort geben"
        android:textAllCaps="false"
        android:longClickable="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/answerTextView"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_marginTop="103dp"
        android:layout_below="@+id/titleTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:contentDescription="Antwort" />

    <Button
        android:text="Neue Akzentfarbe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/newcolorButton"
        android:layout_above="@+id/questionButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="23dp"
        android:contentDescription="Neue Akzentfarbe" />

    <ToggleButton
        android:text="S/W"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/swToggleButton"
        android:layout_alignBaseline="@+id/newcolorButton"
        android:layout_alignBottom="@+id/newcolorButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:contentDescription="Schwarz WeiÃŸ Modus" />

    <TextView
        android:text="Was mache ich heute im CoderDojo?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/titleTextView"
        android:contentDescription="Frage"
        android:layout_marginTop="33dp"
        android:textAppearance="@android:style/TextAppearance.Material.Display1"
        android:textAlignment="center"
        android:textSize="34sp"
        android:layout_below="@+id/BackIconTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAllCaps="false" />

    <Button
        android:text="@string/fa_arrow_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/BackIconTextView"
        android:textSize="30sp"
        style="?android:attr/borderlessButtonStyle"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/newcolorButton"
        android:layout_alignEnd="@+id/newcolorButton"
        android:layout_marginRight="87dp"
        android:layout_marginEnd="87dp" />

    <ViewAnimator
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/questionButton"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
